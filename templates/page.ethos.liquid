#slide-page .bcg {background-image:url("https://cdn.shopify.com/s/files/1/0924/9540/files/Stocksy_txp17a4ebd2FrX000_Medium_83421.jpg?14430399643824459483");}
#slide-page .hsContainer { height: 400px; }
