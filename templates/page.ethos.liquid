 <div id="slide-page">
    <div class="bcg"
                          style="background-position: 50% 70%;background-attachment: unset;";>
        <div class="hsContainer">
            <div class="hsContent center">
              <div>
                <h1 class="headline" style="color:{{settings.banner_color}}">{{ page.title }}</h1>
<!--                 <p class="subtitle" style="color:{{settings.banner_color}}">{{ settings.image_contact_subtitle }}</p> -->
              </div>
            </div>
        </div>
    </div>
  </div>

  <a name="pagecontent" id="pagecontent"></a>
  <div class="container">
  <br class="clear" />

<!-- <div class="ten columns offset-by-three page clearfix"> -->
<!--   <div class="feature_divider"></div> -->


  {% assign cols = page.content | split: '<!-- split -->' %}
  {% if cols.size == 2 %}
    <div class="eight columns alpha">
      {{ cols[0] }}
    </div>
    <div class="eight columns omega">
      {{ cols[1] }}
    </div>
  {% elsif cols.size == 3 %}
    <div class="one-third column alpha">
      {{ cols[0] }}
    </div>
    <div class="one-third column">
      {{ cols[1] }}
    </div>
    <div class="one-third column omega">
      {{ cols[2] }}
    </div>
  {% elsif cols.size == 4 %}
    <div class="four columns alpha">
      {{ cols[0] }}
    </div>
    <div class="four columns">
      {{ cols[1] }}
    </div>
    <div class="four columns">
      {{ cols[2] }}
    </div>
    <div class="four columns omega">
      {{ cols[3] }}
    </div>
  {% else %}
    {{ page.content }}
  {% endif %}

</div>
<a class="action_button secondary" style="background: crimson; color: white;" href="https://www.dryfarmwines.com/account/register">Claim Your Penny Bottle Now</a>

