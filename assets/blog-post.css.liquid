.blog-top-nav {
  padding-top: 20px;
  height: 95px;
}

.blog-logo { 
  height: 55px;
  width: auto;
  top: 20px;
  left: 20px;
}

.blog-header {
  font-family: 'brandon_bold', sans-serif !important;
  font-weight: 900;
  font-style: normal;
  text-transform: uppercase;
  line-height: 1.4;
  font-size: 55px;
  margin-bottom: 1.2rem;
}

h1 {
  font-family: 'brandon_bold', sans-serif !important;
}

p, ul, li {
  margin-top: 28px;
  font-weight: 400;
  font-style: normal;
  font-size: 18px;
  line-height: 1.4;
  letter-spacing: -.003em;
  color: rgba(0,0,0,.8);
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  font-family: 'brandon_regular' !important;
}

ul{
  margin-left: 50px;
  list-style-type: disc;
}

h2 {
  margin-top: 56px;
  margin-bottom: 0px;
  --x-height-multiplier: 0.363;
  --baseline-multiplier: 0.157;
  font-family: 'brandon_medium' !important;
  font-weight: 700;
  font-style: normal;
  font-size: 32px;
  margin-left: -2px;
  line-height: 1.35;
  letter-spacing: -.02em;
  color: rgba(0,0,0,.8);
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
}

img {
  width: 100%;
}

a {
  color: #96082A; 
}

a, a:visited {
  color: #96082A;   
}
a:hover {
  color: #740618;
}

.byline {
  font-size: 14px;
  line-height: 28px; 
  letter-spacing: 1px;
  margin: 0 0 10px;
  text-transform: uppercase;
}

.social-icons img{
  	width: 45px !important;
    padding: 6px;
    border: 0;
    box-shadow: none !important;
    display: inline !important;
    vertical-align: middle;
}

blockquote {
  padding: 0px 50px 5px 50px;
  border-left: none;
}
blockquote p {
  font-size: 22px;
  line-height: 30px;
}
